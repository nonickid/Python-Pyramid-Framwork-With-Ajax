<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
</head>
<body>

        <style>
            form {
                padding: 30px;
                max-width: 450px;
                margin-left: auto;
                margin-right: auto;
                background-color: #4467b8;
                border: 1px solid blue;
            }
            input{
                margin: 10px;
            }
            img {
                height: 60px;
            }
            .actions {
                text-align: center;
            }
            
            .images {
                padding: 40px;
            }
            .border-msg {
                padding: 30px;
                max-width: 750px;
                margin-left: auto;
                margin-right: auto;
                border: 1px solid red;
            }

        </style>
        <div class="container images">
            <div class="row">
                <div class="col-sm">
                    <img src="${request.static_url('web:static/python-logo.png')}">
                </div>
                <div class="col-sm">
                    <img src="${request.static_url('web:static/pyramid-positive.png')}">
                </div>
                 <div class="col-sm">
                    <img src="${request.static_url('web:static/jquery-logo-ajax.png')}">
                </div>
                 <div class="col-sm">
                    <img src="${request.static_url('web:static/mongodb.jpg')}">
                </div>
            </div>
        </div>

        <!-- <div style="background: transparent !important;" class="jumbotron text-center">
            <h1>${web}</h1>
        </div> -->
        <form id="my-form">
                <input class="form-control" type="text" id="name" placeholder="Name" required/>
                <input class="form-control" type="text" id="description" placeholder="Description" required/>
                <input class="form-control" type="text" id="price" placeholder="Price" required/>
            <div class="actions">
                <button type="submit" class="btn btn-primary">Add product</button>
            </div>
        </form>
    <div class="container">
        <table id="prodList" class="table table-striped text-center">
            <tbody id="dynamic">
                <div id="noProducts" class="text-center">
                    <div tal:condition="not products">
                        <div tal:condition="connectionErr">
                            <h4 class="border-msg">${connectionErr}</h4>
                        </div>
                        <div tal:condition="not connectionErr">
                            <h4 class="border-msg">There is no any products</h4>
                        </div>
                    </div>
                </div>
                <div tal:condition="products">
                <div tal:repeat="p products">
                    <tr id="row_${p._id}" class="row">
                        <!-- <td>${repeat.p.number}</td> -->
                        <td class="col-sm-3">${p.name}</td>
                        <td class="col-sm-3">${p.description}</td>
                        <td class="col-sm-3">${p.price}</td>
                        <td class="col-sm-3">
                            <button type="button" class="removeItem btn btn-danger" id="${p._id}">remove</button>
                        </td>
                    </tr>
                </div>
                </div>
            </tbody>
        </table>
    </div>

    <script type="text/javascript" src="${request.static_url('web:static/js/jquery.js')}"></script>
    <script type="text/javascript" src="${request.static_url('web:static/js/processForm.js')}"></script>
</body>